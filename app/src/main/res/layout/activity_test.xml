<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/sendRegisterCaptcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="下发注册短信验证码接口"/>


        <Button
            android:id="@+id/sendLoginCaptcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="下发登录短信验证码接口"/>

        <Button
            android:id="@+id/sendRetrieveCaptcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="下发绑定找回密码短信验证码接口"/>

        <Button
            android:id="@+id/sendBindCaptcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="下发绑定新手机号短信验证码接口"/>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="手机号注册浙报通行证接口"/>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="手机号与密码登录浙报通行证接口"/>


        <Button
            android:id="@+id/loginCaptcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="手机号与短信验证码登录浙报通行证接口"/>


        <Button
            android:id="@+id/getInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="获取通行证详情接口"/>

        <Button
            android:id="@+id/bindPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="绑定浙报通行证手机号接口"/>

        <Button
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="更改浙报通行证密码接口"/>

        <Button
            android:id="@+id/resetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="重置浙报通行证密码接口"/>

        <Button
            android:id="@+id/checkBindState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="检查手机号是否已绑定浙报通行证接口"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="退出登录接口"/>

        <Button
            android:id="@+id/loginThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="社交平台账号登录/注册接口"/>

        <Button
            android:id="@+id/bindThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="浙报通行证绑定新的社交平台账号接口"/>

        <Button
            android:id="@+id/unbindThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="浙报通行证解绑社交账号接口"/>

    </LinearLayout>

</ScrollView>